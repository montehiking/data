{
  "name": "data",
  "version": "0.0.1",
  "description": "Data for MonteHiking app",
  "repository": "git@github.com:montehiking/data.git",
  "author": "Kirill Neruchev <kirill@neruchev.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "postinstall": "husky install && yarn run build",
    "build": "tsc -b",
    "watch": "tsc-watch --onSuccess  \"yarn run start\"",
    "start": "node ./build",
    "prettier": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-json-schema": "^6.1.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^28.0.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "type": "module",
  "main": "./scripts",
  "engines": {
    "node": "16.*",
    "yarn": "1.22.*"
  }
}
